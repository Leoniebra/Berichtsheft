\newcommand{\bettersection}[1]{
    \spaceleft=\dimexpr\textheight-\pagetotal\relax
    \ifdim \spaceleft<250pt
    \newpage
    \section{#1}
    \else
    \section{#1}
    \fi
}

\newcommand{\ultimateUnterschrift}{
    \spaceleft=\dimexpr\textheight-\pagetotal\relax
    \ifdim \spaceleft<150pt
    \UnterschriftOliNewPage
    \else
    \UnterschriftOli
    \fi
}

